# env.example
# Скопируйте этот файл в .env и заполните своими данными

# ============================================================================
# 360dialog API настройки
# ============================================================================
# API ключ от 360dialog (получить в панели hub.360dialog.com)
D360_API_KEY=your_api_key_here

# Базовый URL API 360dialog (обычно не требует изменений)
D360_BASE_URL=https://waba-v2.360dialog.io

# Токен для верификации webhook (придумайте свой секретный токен)
VERIFY_TOKEN=my_secret_verify_token_12345

# ============================================================================
# Сервер настройки
# ============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# ============================================================================
# Администраторы
# ============================================================================
# Номера телефонов админов в формате 79991234567 (без +, пробелов, дефисов)
# Несколько номеров через запятую
ADMIN_IDS=79991234567,79997654321

# ============================================================================
# Google Sheets настройки (опционально)
# ============================================================================
# Путь к файлу с credentials от Google Cloud
SHEETS_CREDENTIALS=credentials.json

# ID Google таблицы (из URL таблицы)
SHEET_ID=your_spreadsheet_id_here

# ============================================================================
# База данных
# ============================================================================
DB_PATH=bot_data.db

# ============================================================================
# Прочее
# ============================================================================
# Таймзона
TZ=Europe/Moscow

